@page
@model BridgeAnalysisWebApplication.Pages.ViewMaterialsModel
@{
}

<div class="text-center">
    <h1 class="display-4">View Materials</h1>
</div>
<br>
These are the materials stored that can be used for bridge analysis:
<br>
<br>

<div class="table">
    <table>
        <thead>
            <tr>
                @foreach (string columnName in Model.materialColumnNames)
                {
                    <th>@columnName</th>
                }
            </tr>
        </thead>

        <tbody>
            @using BridgeAnalysisWebApplication.Models
            @foreach (Material material in Model.materials)
            {
                <tr>
                    <td>@material.Name</td>
                    <td>@material.ModulusOfRupture</td>
                    <td>@material.ShearStrength</td>
                    <td>@material.YoungsModulus</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br>
<br>
<a asp-area="" asp-page="/CreateMaterial">Create a New Material</a>
